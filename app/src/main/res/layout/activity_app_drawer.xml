<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.syr.csrg.seclauncher.ui.activity.AppDrawerActivity">

    <TextView
        android:id="@+id/header"
        android:text="Apps"
        android:background="@drawable/appdrawer_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/line"
        android:background="@drawable/appdrawer_header"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/appdrawer_viewpager"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.syr.csrg.seclauncher.ui.indicator.CirclePageIndicator
        android:id="@+id/appdrawer_viewpagerindicator"
        android:padding="20dp"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        app:radius="2dp"
        app:fillColor="#aaffffff"
        app:pageColor="#00000000" />

</LinearLayout>
