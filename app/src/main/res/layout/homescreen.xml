<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.syr.csrg.seclauncher.ui.fragment.HomescreenFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <!-- android:padding="10dip"-->
        <ImageView
            android:id="@+id/container"
            android:src="@drawable/container"
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"/>

        <!--android:padding="10dip"-->
        <ImageView
            android:id="@+id/information"
            android:src="@drawable/infoicon"
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <!--android:padding="10dip"-->
        <ImageView
            android:id="@+id/trash"
            android:src="@drawable/trash"
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.syr.csrg.seclauncher.ui.indicator.CirclePageIndicator
        android:id="@+id/viewpagerindicator"
        android:padding="20dp"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        app:radius="2dp"
        app:fillColor="#aaffffff"
        app:pageColor="#00000000" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/quickacesspanel"
        android:adjustViewBounds="true"
        android:orientation="horizontal"/>

</LinearLayout>